<?xml version="1.0"?>

<robot name="robot_diff" xmlns:xacro="http://ros.org/wiki/xacro">
    <link name="base_link">

    </link>

<!--ROBOT CHASSI AND OTHER --> 

    <link name="chassi">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://gazebo_urdf/meshes/Robot.dae"/>
            </geometry>            
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://gazebo_urdf/meshes/Robot.dae"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.0"/>
            <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
        </inertial>
    </link>
    <joint name="base_to_chassi" type="fixed">
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="chassi"/>
    </joint>  


<!--LEFT WHEEL-->

    <link name="left_wheel">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://gazebo_urdf/meshes/Roue_65mm.dae"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://gazebo_urdf/meshes/Roue_65mm.dae"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.0"/>
            <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
        </inertial>
    </link>
    <joint name="base_to_left_wheel" type="continuous">
        <origin xyz="0.048790 0.019314 -0.015708" rpy="0.0 0.0 0.0"/>
        <parent link="chassi"/>
        <child link="left_wheel"/>
        <axis xyz="1.0 0.0 0.0"/> <!--indicate the wheel will rotate in x axis-->
    </joint>
    <transmission name="trans_left_wheel">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="base_to_left_wheel">
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
        </joint>
        <actuator name="left_wheel_motor">
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>
	</transmission>



<!--RIGHT WHEEL-->


    <link name="right_wheel">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 3.14"/>
            <geometry>
                <mesh filename="package://gazebo_urdf/meshes/Roue_65mm.dae"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 3.14"/>
            <geometry>
                <mesh filename="package://gazebo_urdf/meshes/Roue_65mm.dae"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 3.14"/>
            <mass value="0.0"/>
            <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
        </inertial>
    </link>
    <joint name="base_to_right_wheel" type="continuous">
        <origin xyz="-0.048332 0.021179 -0.015706" rpy="0.0 0.0 0.0"/>
        <parent link="chassi"/>
        <child link="right_wheel"/>
        <axis xyz="1.0 0.0 0.0"/>  <!--indicate the wheel will rotate in x axis-->
    </joint>
    <transmission name="trans_right_wheel">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="base_to_right_wheel">
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
        </joint>
        <actuator name="right_wheel_motor">
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>
	</transmission>

<!--PIVOT-->

    <link name="pivot">                                                                                                                                         
        <visual>                                                                    
            <origin xyz="0 0 0" rpy="3.14 0 0" />                                                   
            <geometry>                                                                   
                <mesh filename="package://gazebo_urdf/meshes/pivot.dae" />     
            </geometry>                                                                   
        </visual>                                                                   
        <collision>                                                                   
            <origin xyz="0 0 0" rpy="3.14 0 0" />                                                    
            <geometry>                                                                   
                <mesh filename="package://gazebo_urdf/meshes/pivot.dae" />     
            </geometry>                                                                   
        </collision>                                                                    
        <inertial>                                                                    
            <origin xyz="0 0 0" rpy="3.14 0 0"/>                                                                   
            <mass value="0.0"/>                                                                   
            <inertia ixx="0.0"  ixy="0.0"  ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0" />                                                                   
        </inertial>                                                                   
    </link>                                  

    <joint name="pivot_to_chassi" type="fixed">
        <parent link="chassi"/>
        <child link="pivot"/>
        <origin xyz="-0.01500 -0.05000 -0.039500" rpy="0 0 0" />
        <axis xyz="0.0 0.0 0.0"/> 
    </joint>

<!--PIVOT_WHEEL-->

    <link name="pivot_wheel">                                                                                                                                         
        <visual>                                                                    
            <origin xyz="0 0 0" rpy="0 0 0" />                                                   
            <geometry>                                                                   
                <mesh filename="package://gazebo_urdf/meshes/ball.dae"/>     
            </geometry>                                                                   
        </visual>                                                                   
        <collision>                                                                   
            <origin xyz="0 0 0" rpy="0 0 0" />                                                    
            <geometry>                                                                   
                <mesh filename="package://gazebo_urdf/meshes/ball.dae" />     
            </geometry>                                                                   
        </collision>                                                                    
        <inertial>                                                                    
            <origin xyz="0 0 0" rpy="0 0 0"/>                                                                   
            <mass value="0"/>                                                                   
            <inertia ixx="0.0"  ixy="0.0"  ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0" />                                                                   
        </inertial>                                                                   
    </link>                                                                   

    <joint name="pivot_to_wheel" type="continuous">
        <parent link="pivot"/>
        <child link="pivot_wheel"/>
        <origin xyz="0.013 0.006 -0.010000" rpy="0 0 0" />
        <axis xyz="1 1 0" />
    </joint>

</robot>